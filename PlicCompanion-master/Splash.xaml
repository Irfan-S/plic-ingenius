<Window x:Class="PlicCompanion.Splash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlicCompanion"
        mc:Ignorable="d"
        Title="Splash" Height="450" Width="800" WindowStyle="None" WindowStartupLocation="CenterScreen" Background="#FFBFEEFF">
    <Grid>
        <Grid Margin="0,0,-0.4,0.2">
            <Label Content="PlicCompanion" HorizontalAlignment="Center" Margin="260,183,253,196" VerticalAlignment="Center" Height="64" Width="281" FontFamily="/PlicCompanion;component/Res/font/#Helvetica" FontSize="40">
                <Label.Triggers>
                    <EventTrigger RoutedEvent="Label.Loaded">
                        <BeginStoryboard>
                            <Storyboard >
                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:2" FillBehavior="HoldEnd" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Label.Triggers>
            </Label>

        </Grid>

    </Grid>
</Window>
